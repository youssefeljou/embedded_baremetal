/*
 ================================================================================================
 Name        : temp_sensor_example.c
 Author      : Mohamed Tarek
 Description : Test the ADC driver designed with polling technique using LM35 Temperature Sensor
 Date        : 5/9/2015
 ================================================================================================
 */

#include "adc.h"
#include "lcd.h"
#include "lm35_sensor.h"
#include "motor.h"
#include <avr/io.h>
#include "std_types.h"
#include "gpio.h"
int main(void)
{
	ADC_ConfigType ADC_Config = {INTVCC,F_CPU_8};
	uint8 temp=0;
	LCD_init(); /* initialize LCD driver */
	ADC_init(&ADC_Config);
	GPIO_setupPinDirection(Motor_IN1_PORT_ID ,Motor_IN1_PIN_ID,PIN_OUTPUT );
		GPIO_setupPinDirection(Motor_IN2_PORT_ID ,Motor_IN2_PIN_ID,PIN_OUTPUT );


		GPIO_writePin(Motor_IN1_PORT_ID ,Motor_IN1_PIN_ID,LOGIC_LOW);
		GPIO_writePin(Motor_IN2_PORT_ID ,Motor_IN2_PIN_ID,LOGIC_HIGH);


	LCD_displayString("Fan is ");
	LCD_moveCursor(1,0);
	LCD_displayString("Temp = C");

	while(1)
	{


		temp = LM35_getTemperature();

		/* Display the temperature value every time at same position */

		if (temp<30)
		{

			LCD_moveCursor(0,7);
			LCD_displayString("off");
			changeSpeed(temp);
		}
		else if (temp>30)
		{

			LCD_moveCursor(0,7);
			LCD_displayString("on");
			LCD_displayCharacter(' ');
			changeSpeed(temp);

		}
		LCD_moveCursor(1,7);
		if(temp >= 100)
		{
			LCD_intgerToString(temp);
		}
		else
		{
			LCD_intgerToString(temp);
			/* In case the digital value is two or one digits print space in the next digit place */
			LCD_displayCharacter(' ');
		}

	}
}

